<style>
    html {
        font-size: 14px;
    }

    @@media (min-width: 768px) {
        html {
            font-size: 16px;
        }
    }

    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-select:focus, .input-group-text:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, .25), 0 0 0 0.25rem rgba(13, 110, 253, .25) !important; /* Bootstrap primary color with fallback */
    }

    /* _Layout.cshtml için genel stiller */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa; /* Light gray background */
    }

    .navbar {
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 8px rgba(0,0,0,.05);
    }

    .navbar-brand {
        font-weight: 700;
    }

    .footer {
        background-color: #343a40 !important; /* Dark footer */
        color: #f8f9fa !important;
        border-top: none !important;
    }

        .footer a {
            color: #ced4da !important;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer a:hover {
                color: #ffffff !important;
            }

    /* Home/Index.cshtml için özel stiller */

    /* Hero Carousel */
    .carousel-item {
        height: 450px; /* Carousel yüksekliği */
        background-color: #777;
        overflow: hidden; /* Taşmayı engelle */
    }

    .carousel-img-cover {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi alanı kaplamasını sağlar */
        filter: brightness(60%); /* Resmi karart */
        transition: transform 0.5s ease; /* Hover efekti için geçiş */
    }

    .carousel-item:hover .carousel-img-cover {
        transform: scale(1.03); /* Hover'da hafif büyüt */
    }

    .carousel-caption {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.4); /* Koyu yarı saydam arka plan */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 20px;
    }

    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    /* Book Card Hover Efekti */
    .book-card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(0,0,0,.05);
    }

        .book-card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,.15) !important;
        }

    .book-card-img-container {
        position: relative;
        overflow: hidden; /* Resmin taşmasını engelle */
        border-radius: .375rem .375rem 0 0; /* Kartın üst köşelerine uyum */
    }

    .book-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .book-card-hover:hover .book-card-overlay {
        opacity: 1;
    }

    .book-card-overlay-btn {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .book-card-hover:hover .book-card-overlay-btn {
        opacity: 1;
        transform: translateY(0);
    }

    .book-card-overlay-btn:nth-child(1) {
        transition-delay: 0.1s;
    }

    .book-card-overlay-btn:nth-child(2) {
        transition-delay: 0.2s;
    }

    /* Neden Bizi Tercih Etmelisiniz? Bölümü */
    .feature-box {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .feature-box:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
        }

    /* Kullanıcı Yorumları */
    #customerTestimonials .carousel-item {
        height: auto; /* Yorum içerisine göre otomatik yükseklik */
        background-color: transparent;
        filter: none; /* Resim değil, yazı olduğu için filtreye gerek yok */
    }

    /* Sepet ikonu için badge konumu */
    #cart-item-count {
        font-size: 0.75em; /* Daha küçük bir font */
        padding: 0.3em 0.6em; /* Daha küçük bir dolgu */
        line-height: 1;
        vertical-align: middle;
    }
</style>

