@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol - Kitap Dünyası</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header - Minimalist version for auth pages */
        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        nav {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem 0;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #667eea;
            text-decoration: none;
        }
        /* End Header */

        .auth-form-container {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(5px);
            padding: 3rem 2rem;
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            width: 90%;
            max-width: 450px;
            text-align: center;
            animation: fadeIn 1s ease-out;
            margin-top: 80px;
            margin-bottom: 20px;
        }

        .auth-form-container h2 {
            font-size: 2.2rem;
            color: #333;
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }

        .auth-form-container h2::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: -10px;
            width: 60px;
            height: 3px;
            background: #667eea;
            border-radius: 1.5px;
        }

        .auth-form .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .auth-form label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
            font-weight: 500;
        }

        .auth-form input[type="email"],
        .auth-form input[type="password"],
        .auth-form input[type="text"] {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .auth-form input[type="email"]:focus,
        .auth-form input[type="password"]:focus,
        .auth-form input[type="text"]:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
            outline: none;
        }

        .auth-form .btn-submit {
            background: #667eea;
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
            width: 100%;
            margin-top: 1rem;
        }

        .auth-form .btn-submit:hover {
            background: #5a67d8;
            transform: translateY(-2px);
        }

        .auth-form .forgot-password, /* this might not be needed for register but kept for consistency */
        .auth-form .switch-auth {
            margin-top: 1.5rem;
            font-size: 0.95rem;
        }

        .auth-form .forgot-password a,
        .auth-form .switch-auth a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .auth-form .forgot-password a:hover,
        .auth-form .switch-auth a:hover {
            color: #5a67d8;
            text-decoration: underline;
        }

        /* Footer - Minimalist version for auth pages */
        footer {
            background: #2d3748;
            color: white;
            padding: 1.5rem 2rem;
            width: 100%;
            text-align: center;
            margin-top: auto;
        }

        footer p {
            font-size: 0.9rem;
            color: #a0aec0;
        }
        /* End Footer */

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 480px) {
            .auth-form-container {
                padding: 2rem 1rem;
            }
            .auth-form-container h2 {
                font-size: 1.8rem;
            }
            .auth-form input[type="email"],
            .auth-form input[type="password"],
            .auth-form input[type="text"] {
                padding: 0.7rem 0.8rem;
                font-size: 0.9rem;
            }
            .auth-form .btn-submit {
                padding: 0.8rem 1.5rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="container">
            <a href="index.html" class="logo">📚 Kitap Dünyası</a>
        </nav>
    </header>

    <div class="auth-form-container">
        <h2>Kayıt Ol</h2>
        <form action="#" method="POST" class="auth-form">
            <div class="form-group">
                <label for="username">Kullanıcı Adı</label>
                <input type="text" id="username" name="username" placeholder="Kullanıcı adınızı girin" required>
            </div>
            <div class="form-group">
                <label for="email">E-posta Adresi</label>
                <input type="email" id="email" name="email" placeholder="email@ornek.com" required>
            </div>
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" id="password" name="password" placeholder="Şifrenizi oluşturun (min. 6 karakter)" required>
            </div>
            <div class="form-group">
                <label for="confirm-password">Şifre Tekrar</label>
                <input type="password" id="confirm-password" name="confirm-password" placeholder="Şifrenizi tekrar girin" required>
            </div>
            <button type="submit" class="btn-submit">Kayıt Ol</button>
            <p class="switch-auth">Zaten bir hesabın var mı? <a href="login.html">Giriş Yap</a></p>
        </form>
    </div>

    <footer>
        <p>&copy; 2025 Kitap Dünyası. Tüm hakları saklıdır. Sevgiyle tasarlandı 💜</p>
    </footer>

    <script>
        // Form submit handling (for demonstration)
        document.querySelector('.auth-form').addEventListener('submit', function(e) {
            e.preventDefault(); // Sayfanın yenilenmesini engelle

            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            // Basit doğrulama (gerçek projede sunucu tarafında yapılmalı)
            if (username.length < 3) {
                alert('Kullanıcı adı en az 3 karakter olmalıdır.');
                return;
            }
            if (!email.includes('@@') || !email.includes('.')) {
                alert('Lütfen geçerli bir e-posta adresi girin.');
                return;
            }
            if (password.length < 6) {
                alert('Şifre en az 6 karakter olmalıdır.');
                return;
            }
            if (password !== confirmPassword) {
                alert('Şifreler uyuşmuyor.');
                return;
            }

            alert('Kayıt başarılı! Hoş geldiniz, ' + username + '!');
            // Başarılı kayıt sonrası yönlendirme yapılabilir
            // window.location.href = 'login.html';
        });
    </script>
</body>
</html>